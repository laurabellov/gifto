<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aed9e0"
    tools:context=".SettingsPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="2dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/pacifico_header"
            android:text="              Settings"
            android:textColor="#ffa69e"
            android:textSize="15pt"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="14dp"
            android:background="@drawable/a"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/basic"
            android:text="Music options:"
            android:textColor="#faf3dd"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/play"
                android:onClick="play"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffa69e"
                android:fontFamily="@font/basic"
                android:text="play"
                android:textSize="20dp"

                tools:layout_editor_absoluteX="48dp"
                tools:layout_editor_absoluteY="114dp" />
            <Button
                android:id="@+id/pause"
                android:onClick="pause"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffa69e"
                android:fontFamily="@font/basic"
                android:text="pause"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                tools:layout_editor_absoluteX="48dp"
                tools:layout_editor_absoluteY="114dp" />
            <Button
                android:id="@+id/stop"
                android:onClick="stop"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffa69e"
                android:fontFamily="@font/basic"
                android:text="stop"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                tools:layout_editor_absoluteX="48dp"
                tools:layout_editor_absoluteY="114dp" />
        </LinearLayout>

        <Button
            android:id="@+id/logout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#faf3dd"
            android:fontFamily="@font/basic"
            android:text="logout"
            android:textColor="#7c98b3"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="578dp"
            android:onClick="logoutbtn"/>

        <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:id="@+id/gif"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:background="@drawable/shape2"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#5e6472"
            android:src="@drawable/profile" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#5e6472"
            android:src="@drawable/search" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#5e6472"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#5e6472"
            android:src="@drawable/settings" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>